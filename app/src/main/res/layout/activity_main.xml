<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_bg"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="28dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingBottom="16dp"
        android:text="@string/app_name"
        android:textColor="@color/main_screen_title"
        android:textSize="@dimen/title_text"
        android:fontFamily="@font/ys_display_medium"
        android:textStyle="normal" />

    <Button
        android:id="@+id/search"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/search_bt_desc"
        android:text="@string/search_bt"
        app:icon="@drawable/search_icon"
        app:iconPadding="8dp"
        style="@style/MainScreenButton"/>

    <Button
        android:id="@+id/media_lib"
        android:contentDescription="@string/media_bt_desc"
        android:text="@string/media_bt"
        app:icon="@drawable/media_icon"
        style="@style/MainScreenButton"/>

    <Button
        android:id="@+id/settings"
        android:contentDescription="@string/settings_bt_desc"
        android:text="@string/settings_bt"
        app:icon="@drawable/settings_icon"
        style="@style/MainScreenButton"/>

</LinearLayout>