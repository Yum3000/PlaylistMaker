<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsLayoutForButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/settings_screen_pad_start</item>
        <item name="android:paddingEnd">@dimen/settings_screen_pad_end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsTextViewForButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/settings_screen_marg_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_screen_marg_bottom</item>
        <item name="android:textColor">@color/settings_screen_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_screen_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/settings_screen_toolbar</item>
        <item name="android:textFontWeight">500</item>
    </style>
    
    <style name="SearchScreenTrackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:textColor">@color/search_screen_track_desc</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchMediaScreenBt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/search_screen_ph_bt</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
    </style>
    
    <style name="SearchScreenHistoryTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/search_screen_history_title</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AudioPlayerTrackTitles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/audioplayer_titles</item>
    </style>

    <style name="AudioPlayerTrackTitlesDesc" parent="AudioPlayerTrackTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="MediaTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="CreatePlaylistText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColorHint">@color/playlist_text</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>
</resources>